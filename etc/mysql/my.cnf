[mysqld]
datadir=/var/lib/mysql
socket=/var/lib/mysql/mysql.sock
symbolic-links=0

max_allowed_packet=300M

innodb_file_format=Barracuda

back_log = 1024
skip_external_locking
key_buffer_size = 32M
table_open_cache = 256
max_connections = 1024
max_connect_errors = 10000
sort_buffer_size = 1M
read_buffer_size = 1M
myisam_sort_buffer_size = 1M
thread_cache_size = 256
query_cache_size = 0
query_cache_type = 0
tmp_table_size = 64M
max_heap_table_size = 64M
skip_name_resolve
character_set_server = utf8
default_storage_engine = InnoDB
transaction_isolation = REPEATABLE-READ

log_bin = mysql-bin
relay_log = relay-mysql-bin
binlog_format = mixed
log_slave_updates
replicate_ignore_db = mysql
expire_logs_days = 60
gtid_mode = 0

innodb_strict_mode
innodb_data_file_path = ibdata1:10M:autoextend
innodb_file_per_table
innodb_buffer_pool_size = 1600M # [TODO]memの8割
innodb_buffer_pool_instances = 8 # default for 5.5: 1
innodb_log_file_size = 800M # [TODO] innodb_log_files_in_group * innodb_log_file_size = innodb_buffer_pool_size
innodb_log_buffer_size = 16M
innodb_log_files_in_group = 2
innodb_flush_method = O_DIRECT
innodb_lock_wait_timeout = 120
innodb_large_prefix = 1
innodb_print_all_deadlocks = 1
innodb_io_capacity = 200
innodb_io_capacity_max = 200
innodb_additional_mem_pool_size = 20M
innodb_write_io_threads = 2
innodb_read_io_threads = 2
innodb_thread_concurrency = 16
innodb_flush_log_at_trx_commit = 2

innodb_buffer_pool_load_at_startup = 1
innodb_buffer_pool_dump_at_shutdown = 1

explicit_defaults_for_timestamp # default: OFF (but deplicated)
#sql_mode = "STRICT_ALL_TABLES,NO_ZERO_DATE,NO_ZERO_IN_DATE"

performance_schema = OFF

slow_query_log = 0 # [TODO]
long_query_time = 1
log_slow_slave_statements = 1
log_slow_admin_statements = 1

[mysqld_safe]
log-error=/var/log/mysql/mysqld.log
pid-file=/var/run/mysqld/mysqld.pid

